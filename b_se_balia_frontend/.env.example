# Create React App requires REACT_APP_ prefix for exposed env variables.

# API base URL (leave empty to use mock API fallback)
REACT_APP_API_BASE=

# Optional URLs for other services
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Environment & build controls
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=true
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false

# Logging
REACT_APP_LOG_LEVEL=warn

# Feature flags: comma-separated key=value pairs
# Example: "mockApi=true, newHome=false"
REACT_APP_FEATURE_FLAGS=mockApi=true

# Experiments toggle
REACT_APP_EXPERIMENTS_ENABLED=false
